Algoritmo "Descobrir Idade"

Var
   ano_atual, ano_nasc , idade : inteiro
Inicio

   ESCREVAl ("Qual ano estamos?")
   Leia (ano_atual)
   
   Escreval ("Qual ano voce nasceu?")
   Leia (ano_nasc)
   
   // aqui realiza a operação de descobrir a idade
   idade <- ano_atual - ano_nasc

   ESCREVA ("Voce tem " ,idade , " anos")

Fimalgoritmo